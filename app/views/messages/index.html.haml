!!!
.wrapper
  .flash
  .leftwrapper
    .leftcontent
      .username
        %h1= current_user.name
        %li.username__icons
          = link_to new_group_path do
            %i.fa.fa-pencil-square-o
          = link_to edit_user_path(current_user.id) do
            %i.fa.fa-cog
      .groups
        - @groups.each do |group|
          %dl.groups__group-name
            = link_to group_messages_path(group.id) do
              = group.name
          -if group.messages.pluck(:body).last.present?
            %dt.groups__message= group.messages.pluck(:body).last
          -elsif group.messages.pluck(:image).last.present?
            %dt.groups__message 画像が投稿されました。
          -else
            %dt.groups__message まだ投稿されていません。

  .rightwrapper
    .rightcontent
      .header
        .header__left
          %h3= @group.name
          %p Member :
          - @member.each do |m|
            %p= m.name
        .header__right
          = link_to edit_group_path(current_user) do
            Edit
      .body
        = render @messages
      .footer
        .form
        = form_for [@group, @message] do |f|
          = f.text_field :body, placeholder: "type a message", class: "form__message"
          .form__right
            = f.label :image, class: "form__right_label" do
              = fa_icon "picture-o"
              = f.file_field :image, class: "hide"
          = f.submit "Send", class: "form__submit"

